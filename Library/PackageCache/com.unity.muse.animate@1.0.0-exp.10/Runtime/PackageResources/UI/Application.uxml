<ui:UXML xmlns:museCommon="Unity.Muse.Common" xmlns:museAnimate="Unity.Muse.Animate" xmlns:ui="UnityEngine.UIElements" xmlns:appui="Unity.Muse.AppUI.UI" xmlns:uie="UnityEditor.UIElements" xsi="http://www.w3.org/2001/XMLSchema-instance" editor="UnityEditor.UIElements" noNamespaceSchemaLocation="../UIElementsSchema/UIElements.xsd" editor-extension-mode="False">
    <Style src="project:/Packages/com.unity.muse.common/Runtime/UI/PackageResources/uss/Account.uss"/>
    <appui:Panel>
        <ui:Image picking-mode="Ignore" name="background-texture" style="position: absolute; left: 0; top: 0; right: 0; bottom: 0; border-left-width: 0; border-right-width: 0; border-top-width: 0; border-bottom-width: 0; width: 100%; height: 100%;"/>
        <appui:Panel style="background-color: rgba(0, 0, 0, 0);">

            <!-- Tutorial Callout -->
            <ui:VisualElement name="temp-tutorial-callout" style="display: none; position: absolute; right: auto; bottom: auto; top: 41px; left: -6px; border-left-width: 0; border-right-width: 0; border-top-width: 0; border-bottom-width: 0;">
                <ui:Image texture="backgroundTexture" style="position: relative; left: 0; top: 0; right: 0; bottom: 0; border-left-width: 0; border-right-width: 0; border-top-width: 0; border-bottom-width: 0; width: 200px; height: 68px;" />
            </ui:VisualElement>

            <!-- Application UI -->
            <ui:VisualElement name="deeppose-event-handler" style="flex:auto;" picking-mode="Ignore">

                <!-- Top Bar -->
                <ui:VisualElement name="top-bar" class="deeppose-top-bar" picking-mode="Ignore">
                    <museCommon:AccountDropdown class="deeppose-account-dropdown" />
                </ui:VisualElement>

                <ui:VisualElement name="top-bar-separator" class="deeppose-main-horizontal-separator" picking-mode="Ignore"/>

                <!-- Main -->
                <ui:VisualElement name="main" class="deeppose-main" picking-mode="Ignore">

                    <!-- Main -> Left Section -->
                    <ui:VisualElement name="main-left-section" class="deeppose-main-left-section" picking-mode="Ignore">
                        <museAnimate:SidePanelUI name="side-panel-left"
                                                 picking-mode="Ignore"
                                                 quiet="false"
                                                 select-default-page="true"
                                                 align-bottom="false"
                                                 align-right="false"
                                                 reverse-order="false"
                                                 left-button-icon="x"
                                                 left-button-tooltip="Close this panel"
                                                 right-button-icon=""
                                                 hide-menu-if-page-shown="true"
                                                 expand="true"
                        />
                    </ui:VisualElement>
                    <ui:VisualElement name="main-left-separator" class="deeppose-main-vertical-separator" picking-mode="Ignore"/>

                    <!-- Main -> Right Section -->
                    <ui:VisualElement name="main-right-section" class="deeppose-main-right-section" picking-mode="Ignore">

                        <!-- Scene  -->
                        <ui:VisualElement name="scene" class="deeppose-scene" picking-mode="Ignore">

                            <!-- Scene Center (Scene View and Inspectors) -->
                            <ui:VisualElement name="scene-center" class="deeppose-scene-center" picking-mode="Ignore">

                                <!-- Scene View -->
                                <ui:VisualElement name="scene-view" class="deeppose-scene-view" picking-mode="Ignore">

                                    <!-- Scene View -> Play Area -->
                                    <museAnimate:SceneViewPlayArea name="scene-view-play-area" class="deeppose-scene-view-play-area" picking-mode="Position"/>

                                    <!-- Scene View -> Left -->
                                    <ui:VisualElement name="scene-view-left" class="deeppose-scene-view-left" picking-mode="Ignore">

                                        <!-- Scene View Header -->
                                        <museAnimate:SceneViewHeaderUI name="scene-view-header" class="deeppose-scene-view-header" picking-mode="Position"/>

                                        <!-- Scene View -> Left -> Top -->
                                        <ui:VisualElement name="scene-view-left-top" class="deeppose-scene-view-left-top" picking-mode="Ignore">
                                        </ui:VisualElement>

                                        <!-- Scene View -> Left -> Bottom -->
                                        <ui:VisualElement name="scene-view-left-bottom" class="deeppose-scene-view-left-bottom" picking-mode="Ignore">
                                            <!-- Scene View -> Toolbars -->
                                            <ui:VisualElement name="scene-view-toolbars" class="deeppose-scene-view-toolbars" picking-mode="Ignore">
                                                <ui:VisualElement name="scene-view-title" class="deeppose-scene-view-title" picking-mode="Ignore" style="display: None;">
                                                    <appui:Text name="scene-view-title-label" text="Title" class="deeppose-scene-view-title-label" picking-mode="Ignore"/>
                                                </ui:VisualElement>
                                            </ui:VisualElement>
                                        </ui:VisualElement>
                                    </ui:VisualElement>

                                    <!-- Scene View -> Right -->
                                    <ui:VisualElement name="scene-view-right" class="deeppose-scene-view-right" picking-mode="Ignore">

                                        <!-- Baking Task Status -->
                                        <museAnimate:BakingTaskStatusView name="task-status-view" picking-mode="Ignore"/>

                                        <!-- Spacer -->
                                        <ui:VisualElement name="spacer" picking-mode="Ignore" style="flex-grow:1; " />

                                        <!-- Scene View -> Right -> Inspectors Panel -->
                                        <museAnimate:InspectorsPanelView name="inspectors-panel"
                                                                         picking-mode="Ignore"
                                                                         quiet="true"
                                                                         select-default-page="true"
                                                                         align-bottom="true"
                                                                         align-right="true"
                                                                         reverse-order="false"
                                                                         expand="false"
                                                                         hide-menu-if-page-shown="true"
                                                                         hide-menu-when-no-page="true"
                                                                         hide-page-if-empty="true"
                                                                         hide-page-title="true"
                                        />

                                    </ui:VisualElement>

                                    <!-- Scene View -> Overlays -->
                                    <ui:VisualElement name="scene-overlays" class="deeppose-scene-view-overlays" picking-mode="Ignore">

                                        <!-- Text To Motion - Scene View UI-->
                                        <museAnimate:TextToMotionUI name="text-to-motion-ui" picking-mode="Ignore"/>

                                        <!-- Motion To Timeline  - Scene View UI -->
                                        <museAnimate:MotionToTimelineUI name="motion-to-timeline-ui" picking-mode="Ignore"/>

                                        <!-- Baking Notice -->
                                        <museAnimate:BakingNoticeView name="notice-view" picking-mode="Ignore" />

                                    </ui:VisualElement>

                                </ui:VisualElement>

                            </ui:VisualElement> <!-- End of Scene Center UI -->

                        </ui:VisualElement> <!-- End of Scene UI -->

                        <!-- Timeline Authoring - Sequencer -->
                        <museAnimate:TimelineView name="timeline-view" picking-mode="Ignore"/>

                    </ui:VisualElement>
                </ui:VisualElement>
            </ui:VisualElement>

            <!-- Tutorial Mask (Used to highlight/focus on a rect) -->
            <appui:Mask name="tutorial-mask"
                        style="display: None; width: 100%; height:100%; position: absolute;"
                        mask-rect-x="200"
                        mask-rect-y="320"
                        mask-rect-width="200"
                        mask-rect-height="320"
                        inner-mask-color="#00000000"
                        outer-mask-color="#000000bb"
                        blur="1"
                        radius="10"
            />

        </appui:Panel>
    </appui:Panel>
</ui:UXML>
