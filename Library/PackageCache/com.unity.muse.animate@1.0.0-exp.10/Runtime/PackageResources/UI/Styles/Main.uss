@import "./Icons/Icons.uss";

.appui-actiongroup {
    flex-grow: 0;
}

.deeppose-main {
    width: 100%;
    height: 100%;
    flex-grow: 0;
    flex-direction: row;
    align-items: stretch;
}

.deeppose-main-left-section {
    height: 100%;
    flex-grow: 0;
    flex-direction: column;
}

.deeppose-main-right-section {
    height: 100%;
    width: 100%;
    flex-grow: 1;
    flex-direction: column;
}

.deeppose-account-dropdown {
    margin-left: auto;
    margin-right: 0;
}

.deeppose-top-bar {
    flex-grow: 1;
    flex-shrink: 0;
    padding: 8px;
    flex-direction: row;
    align-items: center;
    flex-wrap: nowrap;
    height: 36px;
    background-color: var(--appui-backgrounds-200);
}

.deeppose-main-horizontal-separator {
    flex-grow: 0;
    flex-shrink: 0;
    padding: 0;
    height: 1px;
    background-color: var(--appui-backgrounds-50);
}

.deeppose-main-vertical-separator {
    flex-grow: 0;
    flex-shrink: 0;
    padding: 0;
    width: 1px;
    background-color: var(--appui-backgrounds-50);
}

.deeppose-toolbar {
    flex-grow: 0;
    flex-shrink: 0;
    padding: 0;
    align-items: flex-start;
    flex-wrap: nowrap;
}

.deeppose-toolbar .appui-actiongroup__item {
    border-width: 1px;
    border-radius: 6px;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
}

.deeppose-toolbar .appui-actiongroup__item.unity-last-child {
    border-width: 1px;
    border-radius: 6px;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
    margin-right: 0;
}

.deeppose-toolbar .appui-actiongroup__item.unity-first-child {
    border-width: 1px;
    border-radius: 6px;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
}

.deeppose-toolbar .appui-actiongroup__item:disabled {
    background-color: rgba(0,0,0,0);
    border-color: rgba(0,0,0,0);
}

.deeppose-toolbar .appui-actiongroup__item:disabled:hover {
    background-color: rgba(100,100,100,0.1);
    border-color: rgba(0,0,0,0);
}

.deeppose-toolbar-button {
}

.deeppose-toolbar-button .appui-icon {
}

.deeppose-scene {
    width: 100%;
    height: 100%;
    flex-direction: column;
}

.deeppose-scene-top {
    width: 100%;
    flex-grow: 0;
    flex-shrink: 0;
    padding: var(--appui-spacing-50);
    flex-direction: row;
    background-color: rgba(0,0,0,0.8);
}

.deeppose-scene-center {
    width: 100%;
    height: 100%;
    flex-direction: column;
}

.deeppose-scene-view {
    width: 100%;
    height: 100%;
    flex-direction: row;
}

.deeppose-scene-view-overlays {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    align-items: center;
}

.deeppose-scene-view-left {
    flex-direction: column;
    width: 100%;
    height: 100%;
}

.deeppose-scene-view-left-top
{
    align-items: stretch;
    flex-direction: row-reverse;
    padding: var(--appui-spacing-100);
    width: 100%;
    height: auto;

}

.deeppose-scene-view-title
{
    flex-grow: 0;
    flex-shrink: 0;
    align-items: stretch;
    flex-direction: row;
    min-width: 64px;
    width: 64px;
    min-height: 30px;
    flex-wrap: nowrap;
}

.deeppose-scene-view-title-label
{
    position: absolute;
    top: 0;
    bottom: 0;
    font-size: 14px;
    -unity-font-style: bold;
    padding: var(--appui-spacing-50);
    padding-left: var(--appui-spacing-150);
    padding-right: var(--appui-spacing-150);
    -unity-text-align: middle-left;
    background-color: rgba(0,0,0,0.5);
    border-radius: var(--appui-sizing-50);
    flex-wrap: nowrap;
    overflow: visible;
}

.deeppose-scene-view-left-bottom {
    flex-grow: 1;
    height: 100%;
    width: auto;
    align-items: flex-start;
    justify-content: flex-start;
    flex-direction: row;
}

.deeppose-scene-view-right {
    align-items: flex-end;
    flex-shrink: 0;
    width: auto;
}

.deeppose-scene-view-toolbars {
    flex-grow: 0;
    flex-shrink: 0;
    padding: var(--appui-spacing-100);
    align-items: flex-start;
    flex-wrap: nowrap;
    width: auto;
    height: 100%;
}

.deeppose-scene-view-play-area {
    flex-grow: 0;
    flex-shrink: 0;
    position: absolute;
    left:0;
    right:0;
    top: 0;
    bottom: 0;
}

.deeppose-drop-menu {
    height: 100%;
    width: 100%;
    padding: 4px;
    background-color: var(--appui-background-inspector);
}

.appui-menuitem__shortcut{
    margin-left: 10px;
    -unity-font-style: bold;
}

.appui-menuitem__shortcut{
    position: absolute;
    right: 0px;
    top: 0px;
}
