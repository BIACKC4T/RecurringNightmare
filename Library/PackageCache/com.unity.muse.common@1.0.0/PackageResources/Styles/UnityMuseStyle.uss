.muse-input-label--toggle-flexend {
    --appui-inputlabel-label-size: 50%;
}

.appui-numericalfield,
.appui-inputlabel {
    width: auto;
}

.appui-dialog__buttongroup > .appui-checkbox > .appui-checkbox__box {
    margin-left: 0;
}

.bottom-gap {
    margin-bottom: var(--appui-spacing-125);
}

.right-gap {
    margin-right: var(--appui-spacing-125);
}

.row {
    flex-direction: row;
    align-self: stretch;
}

#muse-account-usage-group .row {
    flex-wrap: nowrap;
}

.muse-spacer {
    flex-grow: 1;
    flex-shrink: 1;
}

.appui-inputlabel--horizontal > .appui-inputlabel__label {
    padding-right: var(--appui-alias-control-gap-md);
}

.appui-inputlabel--horizontal > .appui-inputlabel__label {
    padding-right: var(--appui-alias-control-gap-md);
    flex-basis: initial;
}

.muse-dropzone {
    background-color: var(--appui-backgrounds-100);
    padding: var(--appui-alias-control-gap-lg);
    border-width: var(--appui-alias-control-border-width);
    border-color: var(--appui-alias-actions-border-color-default);
    align-items: center;
    justify-content: center;
    overflow: hidden;
}

.muse-dropzone:hover,
.muse-dropzone.is-hovered {
    border-color: var(--appui-alias-actions-border-color-hover);
}

.muse-dropzone:focus,
.muse-dropzone.is-focused {
    border-color: var(--appui-accent-100);
}

.muse-dropzone__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.muse-dropzone__helper {
    justify-content: center;
    align-items: center;
}

.muse-dropzone__message {
    -unity-text-align: middle-center;
}

.muse-dropzone.accept-drag,
.muse-dropzone.accept-drag:hover,
.muse-dropzone.accept-drag.is-hovered,
.muse-dropzone.accept-drag:focus,
.muse-dropzone.accept-drag.is-focused {
    border-color: var(--appui-accent-100);
}

.muse-patterns-view {
    width: 230px;
    height: 230px;
}

.muse-patterns-view__item {
    position: relative;
    width: 75px;
    height: 75px;
    padding: 4px;
}

.muse-patterns-view__image {
    width: 100%;
    height: 100%;
    border-width: var(--appui-alias-control-border-width);
    border-color: rgba(0,0,0,0);
}

.appui-grid-view__item.is-selected .muse-patterns-view__image {
    border-color: var(--appui-accent-100);
}